<div class="center jumbotron headboard">
    <div class="img-div">
        <%= get_img(@user) %>
    </div>
    <h2><%= @user.name %></h2>
    <% if current_user?(@user) %>
        <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %>
    <% else %>
        <%= render 'users/follow_form', user: @user %>
    <% end %>
</div>