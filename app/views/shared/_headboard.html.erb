<div class="center jumbotron headboard">
    <div class="img-div">
        <%= get_img(@user) %>
    </div>
    <h2><%= @user.name %></h2>
    <% if current_user?(@user) %>
        <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %>
    <% else %>
        <div class="col-md-2 col-md-offset-5">
            <%= render 'users/follow_form' %>
        </div>
    <% end %>
</div>