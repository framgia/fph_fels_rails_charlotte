<div class="row">
    <div class="col-md-6 centered">
        <div class="jumbotron">
            <div>
                <h2><%= @category.title %></h2>            
            </div>
            <p><%= @category.description %></p>
        </div>

        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th class="center">Words</th>
                    </tr>
                </thead>
                <tbody>
                    <% @category.words.each do |word| %>
                        <tr>
                            <td>
                                <%= link_to word.content, admin_category_word_url(word, category_id: @category.id) %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
