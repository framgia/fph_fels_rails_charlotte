<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
    <% @users.each do |user| %>
        <li>
            <div class="img-div">
                <%= image_tag user.avatar.url if user.avatar? %>
            </div>
            <p><%= user.name %> <span><%= link_to "follow", '#', class: "badge badge-secondary" %></span></p>
        </li>
    <% end %>
</ul>

<%= will_paginate %>